{
  "manifest_version": 3,
  "name": "autofill.ai",
  "version": "1.0",
  "description": "Smart autofill using labels & placeholders",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
    "16": "/icon.png",
    "48": "/icon.png",
    "128": "/logo.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "libs/tesseract/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
